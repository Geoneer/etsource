- query =
    UPDATE(
      V(
        households_space_heater_heatpump_air_water_electricity,
        households_space_heater_heatpump_ground_water_electricity,
        households_space_heater_hybrid_heatpump_air_water_electricity,
        storage
      ),
      volume,
      DIVIDE(USER_INPUT(), 1000.0)
    )
- priority = 0
- max_value = 500.0
- min_value = 0.0
- start_value_gql = present:V(households_space_heater_heatpump_ground_water_electricity,"storage.volume")*1000
- step_value = 0.5
- factor = 1.0
- unit = kWh
- update_period = future
