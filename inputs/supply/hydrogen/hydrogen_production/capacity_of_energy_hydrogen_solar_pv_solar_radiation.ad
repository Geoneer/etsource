- query =
    EACH(
        UPDATE(
            V(energy_hydrogen_solar_pv_solar_radiation),
            number_of_units,
            USER_INPUT() / V(energy_hydrogen_solar_pv_solar_radiation, electricity_output_capacity)
        ),
        UPDATE(
            L(energy_hydrogen_solar_pv_solar_radiation),
            preset_demand_by_electricity_production,
            V(energy_hydrogen_solar_pv_solar_radiation, production_based_on_number_of_units)
        ),
        UPDATE(
            V(energy_hydrogen_electrolysis_solar_electricity),
            number_of_units,
            DIVIDE(PRODUCT(USER_INPUT(),AREA(hydrogen_electrolysis_solar_capacity_share)),V(energy_hydrogen_electrolysis_solar_electricity, typical_input_capacity))
        ),
        UPDATE(
            L(energy_hydrogen_electrolysis_solar_electricity),
            preset_demand_by_hydrogen_production,
            V(energy_hydrogen_electrolysis_solar_electricity, hydrogen_production_based_on_number_of_units)
        )
    )
- priority = 0
- max_value_gql = present:MAX(1.0,PRODUCT(DIVIDE(AREA(land_available_for_solar),V(energy_hydrogen_solar_pv_solar_radiation,land_use_per_unit)),V(energy_hydrogen_solar_pv_solar_radiation, electricity_output_capacity)))
- min_value = 0.0
- start_value_gql = present:PRODUCT(V(energy_hydrogen_solar_pv_solar_radiation,number_of_units),V(energy_hydrogen_solar_pv_solar_radiation,electricity_output_capacity))
- step_value = 0.1
- unit = MW
- update_period = future
