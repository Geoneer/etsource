- query =
    EACH(
        UPDATE(
            V(energy_hydrogen_steam_methane_reformer_ccs),
            number_of_units,
            USER_INPUT() / V(energy_hydrogen_steam_methane_reformer_ccs, typical_input_capacity)
        ),
        UPDATE(
            L(energy_hydrogen_steam_methane_reformer_ccs),
            preset_demand_by_hydrogen_production,
            V(energy_hydrogen_steam_methane_reformer_ccs, hydrogen_production_based_on_number_of_units)
        )
    )
- priority = 0
- max_value = 16000.0
#- max_value_gql = DIVIDE( 1.233e+8, V(energy_hydrogen_steam_methane_reformer_ccs, full_load_hours))
- min_value = 0.0
- start_value = 0.0
- step_value = 0.1
- unit = MW
- update_period = future

# max_value is calculated based on Gasunie-predictions of how much hydrogen is needed in 2050 (444PJ = 1.233e+8 MWh) divided by the FLH of this technology
