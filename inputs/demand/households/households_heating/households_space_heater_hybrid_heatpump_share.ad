- query =
    EACH(
      UPDATE(LINK(households_space_heater_hybrid_heatpump_collector_useable_heat,households_useful_demand_for_space_heating_after_insulation_and_solar_heater), share, DIVIDE(USER_INPUT(),100)),

      UPDATE(V(households_space_heater_hybrid_heatpump_collector_useable_heat), number_of_units, (USER_INPUT() / 100.0) * QUERY_PRESENT(-> { AREA(number_of_residences) })),

      UPDATE(V(households_space_heater_hybrid_heatpump_air_water_electricity), number_of_units, (USER_INPUT() / 100.0) * QUERY_PRESENT(-> { AREA(number_of_residences) })),

      UPDATE(V(households_space_heater_hybrid_heatpump_combined_network_gas), number_of_units, (USER_INPUT() / 100.0) * QUERY_PRESENT(-> { AREA(number_of_residences) }))    
    )
- share_group = heating_households
- priority = 0
- max_value = 100.0
- min_value = 0.0
- start_value_gql = present:V(households_space_heater_hybrid_heatpump_collector_useable_heat,share_of_households_useful_demand_for_space_heating_after_insulation_and_solar_heater) * 100
- step_value = 0.1
- unit = %
- update_period = future
