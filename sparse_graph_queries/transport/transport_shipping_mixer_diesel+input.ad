# set carrier input shares equal to energy coming into the node as specified by the user
# if demand is 0, set carrier input shares equal to default values

- query =
    total_shipping_mixer_diesel_demand = DATASET_INPUT(input_transport_ship_diesel_demand) + DATASET_INPUT(input_transport_ship_biodiesel_demand) + DATASET_INPUT(transport_final_demand_heavy_fuel_oil_demand);

    IF(total_shipping_mixer_diesel_demand > 0.0, {
        lng: 0.0,
        bio_lng: 0.0,
        diesel: DATASET_INPUT(input_transport_ship_diesel_demand) / total_shipping_mixer_diesel_demand,
        biodiesel: DATASET_INPUT(input_transport_ship_biodiesel_demand) / total_shipping_mixer_diesel_demand,
        heavy_fuel_oil: DATASET_INPUT(transport_final_demand_heavy_fuel_oil_demand) / total_shipping_mixer_diesel_demand }, {
        lng: SHARE(transport_shipping_mixer_diesel_child_share, transport_final_demand_for_shipping_lng),
        bio_lng: SHARE(transport_shipping_mixer_diesel_child_share, transport_final_demand_for_shipping_bio_lng),
        diesel: SHARE(transport_shipping_mixer_diesel_child_share, transport_final_demand_for_shipping_diesel),
        biodiesel: SHARE(transport_shipping_mixer_diesel_child_share, transport_final_demand_for_shipping_biodiesel),
        heavy_fuel_oil: SHARE(transport_shipping_mixer_diesel_child_share, transport_final_demand_for_shipping_heavy_fuel_oil)}
        )
