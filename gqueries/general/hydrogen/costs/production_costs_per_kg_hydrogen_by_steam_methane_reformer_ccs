# Total cost of hydrogen production by steam methane reforming + ccs per kg produced hydrogen

- query =
    DIVIDE(
        V(energy_hydrogen_steam_methane_reformer_ccs, total_costs_per(:converter)),
        DIVIDE(
            V(energy_hydrogen_steam_methane_reformer_ccs, output_of_hydrogen),
            120.1
        )
    )

# energy density of h2 is 120.1 MJ/kg
