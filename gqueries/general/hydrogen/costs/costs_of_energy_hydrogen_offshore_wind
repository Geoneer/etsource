# Total cost of hydrogen production from offshore wind per kg produced hydrogen

- query =
    DIVIDE(
        SUM(
            V(Q(energy_hydrogen_electrolysis_wind_electricity), total_costs_per(:converter)),
            V(Q(energy_hydrogen_wind_turbine_offshore), total_costs_per(:converter))
        ),
        DIVIDE(
            V(Q(energy_hydrogen_electrolysis_wind_electricity), output_of_hydrogen),
            120.1
        )
    )


# energy density of h2 is 120.1 MJ/kg
